{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "*": [ "node_modules/*" ]
    }
  },
  "include": [ "src/**/*" ]
}
